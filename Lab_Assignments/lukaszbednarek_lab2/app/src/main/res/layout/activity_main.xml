<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_main_song_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="28dp"
        android:onClick="goToSongListOne"
        android:text="@string/songs_1"
        app:layout_constraintEnd_toEndOf="@+id/textView_main_song_title"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_song_title" />

    <Button
        android:id="@+id/button_main_song_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:onClick="goToSongListTwo"
        android:text="@string/songs_2"
        app:layout_constraintStart_toStartOf="@+id/button_main_song_one"
        app:layout_constraintTop_toBottomOf="@+id/button_main_song_one" />

    <TextView
        android:id="@+id/textView_main_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/colors_and_songs_by_luke"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>